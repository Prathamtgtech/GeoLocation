<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GetLocation.CurrentLocation">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Location"
        android:id="@+id/getLoc"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:padding="15dp"
        android:layout_below="@+id/imgUri"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Image Uri"
        android:id="@+id/imgUri"
        android:layout_below="@+id/addrtxt"
        android:layout_marginTop="25dp"
        android:layout_centerInParent="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Latitude :"
        android:id="@+id/lattxt"
        android:layout_below="@id/ImageView"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="120dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Not Availabe"
        android:id="@+id/latvalue"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/ImageView"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/lattxt"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Longitude :"
        android:id="@+id/langtxt"
        android:layout_below="@+id/lattxt"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="120dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Not Availabe"
        android:id="@+id/langvalue"
        android:layout_marginLeft="15dp"
        android:layout_below="@+id/lattxt"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@+id/langtxt"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address :"
        android:id="@+id/addrtxt"
        android:layout_below="@+id/langtxt"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="120dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Not Availabe"
        android:id="@+id/addevalue"
        android:layout_marginLeft="15dp"
        android:layout_below="@+id/langtxt"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@+id/langtxt"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/getLoc"
        android:layout_marginTop="20dp"
        android:padding="15dp"
        android:id="@+id/save"
        android:text="Save Location"
        android:layout_centerInParent="true"
        />

    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:id="@+id/ImageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:src="@drawable/ic_launcher_background"
        />
</RelativeLayout>